    <script type="text/javascript">
        $(function () {
            $("#benkeshengjiaoyu").click(function () {
                $(this).parent().addClass("active");
                $(this).parent().siblings().removeClass("active");
                $.ajax({
                    url: "/All/GetEducationTeach",
                    type: "POST",
                    data: {
                        typeName: $(this).html(),
                    },
                    success: function (resTxt) {
                        $("#EducationTitle").html("");
                        $("#EducationTitle").html(resTxt.typeName);
                        $("#EducationDetails").html("");
                        $("#EducationDetails").append(resTxt.educationTeach.Details);
                    }
                });
            });

            $("#qiannengdaoshi").click(function () {
                $(this).parent().addClass("active");
                $(this).parent().siblings().removeClass("active");
                $.ajax({
                    url: "/All/GetEducationTeach",
                    type: "POST",
                    data: {
                        typeName: $(this).html(),
                    },
                    success: function (resTxt) {
                        $("#EducationTitle").html("");
                        $("#EducationTitle").html(resTxt.typeName);
                        $("#EducationDetails").html("");
                        $("#EducationDetails").append(resTxt.educationTeach.Details);
                    }
                });
            });

            $("#lizhijiaoyu").click(function () {
                $(this).parent().addClass("active");
                $(this).parent().siblings().removeClass("active");
                $.ajax({
                    url: "/All/GetEducationTeach",
                    type: "POST",
                    data: {
                        typeName: $(this).html(),
                    },
                    success: function (resTxt) {
                        $("#EducationTitle").html("");
                        $("#EducationTitle").html(resTxt.typeName);
                        $("#EducationDetails").html("");
                        $("#EducationDetails").append(resTxt.educationTeach.Details);
                    }
                });
            });
        })
    </script>
